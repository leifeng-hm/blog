<%- include header %>
<% posts.forEach(function (post, index) { %>
<h2>
    <p><h2><a href="/p/<%= post._id %>"><%= post.title %></a></h2>
</h2>
<p class="info">
    <i class="material-icons">perm_identity</i>作者：
    <a href="/u/<%= post.name %>"><%= post.name %></a>
    | <i class="material-icons">query_builder</i>日期：<%= post.time.minute %>
    |  <i class="material-icons">turned_in_not</i>标签：
    <% post.tags.forEach(function (tag, index) { %>
        <% if (tag) { %>
            <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
        <% } %>
    <% }) %>
    <% if (post.reprint_info.reprint_from) { %>
        <br>
        <a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">原文链接</a>
    <% } %>
</p>
<div class="post-content">
    <%- post.post %>
</div>
<p class="info">
    <i class="material-icons">visibility</i>阅读：<%= post.pv %>
    | <i class="material-icons">open_in_new</i>转载：
    <% if (post.reprint_info.reprint_to) { %>
        <%= post.reprint_info.reprint_to.length %>
    <% } else { %>
    <%= 0 %>
<% } %>
</p>

<% }) %>
<%- include paging %>
<%- include footer %>
